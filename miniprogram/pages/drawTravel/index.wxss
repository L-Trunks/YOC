@import '../../style/base.wxss';

.map {
    position: absolute;
    width: 100%;
    height: 100%;
}

.dt_top {
    z-index: 1;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    padding: 24rpx 80rpx 24rpx 44rpx;
}

.now_day {
    padding: 10rpx 20rpx;
    border-radius: 10rpx;
}

.image_top {
    width: 90rpx;
    height: 70rpx;
    margin-right: 30rpx;
}

.dt_img_items {
    position: fixed;
    top: 120rpx;
    left: 44rpx;
    z-index: 1;
}

.img_item {
    width: 36rpx;
    height: 36rpx;
    margin: 10rpx 10rpx;
}

.dt_img_item {
    width: 160rpx;
    height: 90rpxs;
}

.btn_top {
    padding: 10rpx 20rpx;
    border-radius: 10rpx;
    background: #fff;
    margin: 0 10rpx;
}

.btn_next_view {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding-bottom: 42rpx;
}

.btn_next {
    padding: 14rpx 60rpx;
    color: #fff;
    font-weight: 400;
    font-size: 24rpx;
    border-radius: 35rpx;
}

.dt_left_btn {
    position: fixed;
    z-index: 1;
    left: 44rpx;
    bottom: 184rpx;
}

.dt_left {
    color: rgb(166, 234, 233);
    padding: 10rpx 20rpx;
    margin: 5rpx 0;
    background: #fff;
}

.dt_left_active {
    background: rgb(166, 234, 233);
    color: #fff;
}

.btn_remove {
    position: fixed;
    z-index: 1;
    right: 44rpx;
    bottom: 88rpx;
}

.btn_remove_view {
    padding: 10rpx 20rpx;
    border-radius: 10rpx;
    background: #f04f48;
}

.tipsBtn{
    position: fixed;
    top: 40rpx;
    left: 70rpx;
    width: 44rpx;
    height: 44rpx;
    z-index: 1;
}
.dayTips{
    position: fixed;
    top: 92rpx;
    left: 52rpx;
    padding: 50rpx 20rpx;
    background: rgba(0, 0, 0, .6);
    color: #fff;
    border-radius: 15rpx;
    display: inline-block;
    z-index: 1;
}
.tips_top{
    width: 0;
    height: 0;
    position: absolute;
    top: -25rpx;
    left: 20rpx;
    z-index: 1;
    border-top: 15rpx solid transparent;
    border-right: 15rpx solid transparent;
    border-left: 15rpx solid transparent;
    border-bottom: 15rpx solid rgba(0, 0, 0, .3);
}

.dayItems{
    position: fixed;
    top: 40rpx;
    right: 170rpx;
    z-index: 1;
    background: rgba(0, 0, 0, .3);
    border-radius: 10rpx;
}

.dayItem{
    padding: 12rpx 26rpx;
    background: #fff;
    border-radius: 10rpx;
    margin-top: 10rpx;
    color: #6fb5f3;

}
.dayItem:hover{
    background: #6fb5f3;
    color: #fff;
}
.dayItem:first-child{
    margin-top: 0;
    background: #6fb5f3;
    color: #fff;
}

.dayItem:first-child cover-image{
    width: 12rpx;
    height: 8rpx;
    margin-left: 6rpx;
}
