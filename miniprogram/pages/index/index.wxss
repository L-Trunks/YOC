.main {
    text-align: center;
    margin-bottom: 150rpx;
}

/* 请求用户数据按钮 */
#btn_user {
    position: fixed;
    width: 100%;
    height: 100%;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 9999;
    opacity: 0;
}

/* logo */

.logo {
    width: 40%;
    height: 180rpx;
}

.logo_box {
    /* margin-top: 40rpx; */
    padding: 40rpx;
    padding-bottom: 0;
}

.logo_box:after {
    position: relative;
    top: -45rpx;
    /* left: 180rpx; */
    font-weight: bold;
    content: '自由行';
    color: #6fb5f3;
    font-size: 32rpx;
}

.form_box {
    font-size: 26rpx;
    display: flex;
    flex-direction: column;
    align-items: center;

}

.form_item {
    color: rgba(161, 161, 161);
    border-radius: 35rpx;
    width: 474rpx;
    box-shadow: 2rpx 3rpx 26rpx 2rpx rgba(0, 0, 0, 0.08);
    display: flex;
    align-items: center;
    padding: 22rpx 18rpx;
    margin-top: 50rpx;
}

.form_img {
    width: 36rpx;
    height: 36rpx;
    margin-right: 10rpx;
}

.start_btn {
    color: #fff;
    font-weight: 800;
    background: #6fb5f3;
    padding: 6rpx 50rpx;
    border-radius: 30rpx;
    margin-top: 40rpx;
    box-shadow: 1rpx 10rpx 21rpx 4rpx rgba(0, 0, 0, 0.07);
}

.picker {
    width: 100%;
    margin-left: 28rpx;
}

.main_people{
    width: 750rpx;
}