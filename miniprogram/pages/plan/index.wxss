@import '../../style/base.wxss';

.plan_container {
  position: relative;
  padding: 46rpx 70rpx;
}

.plan_top text {
  margin-top: 5rpx;
}

.plan_items {
  margin: 70rpx 0;
}

.plan_item_top image {
  width: 28rpx;
  height: 28rpx;
}

.plan_left,
.plan_right {
  min-width: 270rpx;
  flex-basis: 270rpx;
}

.plan_item {
  margin-top: 40rpx;
  border-radius: 15rpx;
  padding: 15rpx 18rpx 10rpx 18rpx;
  width: 234rpx;
}

.plan_item_bottom {
  margin-top: 60rpx;
  color: #6FB5F4;
}

.no_travel_plan {
  padding: 50rpx 0;
}

.plan_click {
  padding: 10rpx 15rpx;
  border-radius: 15rpx;
  color: #fff;
  display: inline-block;
  margin-top: 30rpx
}

.remove_dravel {
  position: absolute;
  top: 70rpx;
  right: 80rpx;
  font-size: 24rpx;
  padding: 10rpx 15rpx;
  border-radius: 15rpx;
  color: #fff;
  display: inline-block;
  background: #f04f48;
}