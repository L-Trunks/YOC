@import '../../style/base.wxss';

.background {
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 380rpx;
    z-index: -1;
}

.scenery {
    margin-bottom: 150rpx;
}

.scenery_top {
    padding: 0;
    width: 100%;
    height: 380rpx;
    position: relative;
}

.search_box {
    width: 100%;
    position: absolute;
    bottom: 10rpx;
}

.scenery_search {
    width: 60%;
    opacity: 0.6;
    padding: 18rpx 40rpx;
    border-radius: 30rpx;
    background: #fff;
    font-size: 22rpx;
}

.scenery_search image {
    margin-right: 64rpx;
    width: 44rpx;
    height: 38rpx;
}

.main_box {
    background-color: white;
}

.category_box {
    padding: 60rpx 70rpx;
}

.category_box view {
    padding: 10rpx 15rpx;
    border-radius: 15rpx;
}

.category_item {
    background: #fff;
    color: #6fb5f3;
    font-size: 24rpx;
    box-shadow: rgb(230, 230, 230) 0 0 24rpx;
}

.category_item_active {
    background: #6fb5f3;
    color: #fff;
    font-size: 24rpx;
}

.scenery_box {
    padding: 20rpx 70rpx;
    padding-top: 0;
}

.scenery_item {
    width: 100%;
    position: relative;
    box-shadow: #f1f1f1 0 0 24rpx;
    margin-bottom: 40rpx;
    background: #fff;
}

.s_item_left {
    width: 28%;
    height: 194rpx;
}

.s_item_model {
    width: 50%;
    padding: 20rpx 24rpx;
}

.s_item_model view {
    font-weight: 900;
    font-size: 28rpx;
    margin-bottom: 10rpx;
}

.s_item_text {
    font-size: 22rpx;
    line-height: 22rpx;
    overflow: hidden;
    display: inline-block;
    width: 340rpx;
    margin-top: 28rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.s_item_right {
    width: 36rpx;
    height: 36rpx;
    position: absolute;
    bottom: 14rpx;
    right: 30rpx;
}

.search_top {
    background: #d5f6fb;
    height: 140rpx;
    /* padding: 40rpx 0; */
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    transform: all 1s;
    z-index: 3;
}

.search_back {
    width: 60rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.scenery_submit {
    position: fixed;
    bottom: 140rpx;
    right: 70rpx;
    padding: 10rpx 80rpx;
    background: rgba(230, 201, 128);
    color: #fff;
    border-radius: 30rpx;
}

.hours_box {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    right: 0;
    z-index: 4;
    /* padding: 0 70rpx; */
    background: rgba(0, 0, 0,0.4);
}

.hours_main {
    width: 100%;
    /* padding: 40rpx 0; */
    /* background-color: #f5fafe; */
    color: #6fb5f3;
}

.lock {
    width: 60rpx;
    height: 60rpx;
    position: relative;
    top: 20rpx;
    left: 20rpx;
}

.hours {
    width: 100%;
    /* background-color: #f5fafe; */
    border-radius: 30rpx;
}

.next_hour{
    background:#6fb5f3;
    color:#fff;
    font-size: 40rpx;
    width: 90%;
    text-align: center;
    padding: 10rpx 0;
    border-radius: 30rpx;
}