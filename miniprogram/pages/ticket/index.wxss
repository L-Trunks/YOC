@import '../../style/base.wxss';
.t_container {
    padding: 20rpx 0;
    position: relative;
}

.t_logo {
    width: 139rpx;
    height: 44rpx;
    position: absolute;
    top: 46rpx;
    left: 70rpx;
}

.hot_swiper_banner {
    width: 100%;
    height: 175rpx;
}

.hot_swiper_banner_item,
.main_hot_image {
    width: 682rpx !important;
    height: 175rpx !important;
    border-radius: 10rpx;
}

.main_hot_banner {
    background: #fff;
    padding-top: 40rpx;
    margin: 80rpx 0rpx 20rpx 0;
}

.left_banner {
    margin-left: 38rpx !important;
}

.t_tips {
    padding-right: 87rpx;
    font-size: 14rpx;
}

.t_left {
    flex-basis: 130rpx;
    background: #d4e9fc;
    padding: 50rpx 0 150rpx 0;
}

.t_select {
    background: #6fb5f4;
    white-space: nowrap;
}

.t_item_height {
    padding: 20rpx;
}

.t_right {
    flex: 1;
    padding: 0rpx 70rpx 56rpx 48rpx;
    position: relative;
}

.t_item_active {
    background: #fff;
    color: #6fb5f4;
}

.plan_active {
    box-shadow: 6rpx 10rpx 26rpx 1rpx rgba(111, 181, 244, 0.5);
}

.plan_no_active {
    box-shadow: 6rpx 10rpx 26rpx 1rpx rgba(179, 179, 179, 0.3);
}

.t_right_item {
    margin-top: 45rpx;
    border-radius: 15rpx;
}

.t_right_item>image {
    width: 190rpx;
    height: 200rpx;
    border-radius: 15px 0 0 15px;
}

.t_right_item:first-child {
    margin-top: 0;
}

.t_right_item>view {
    height: 160rpx;
    padding: 20rpx;
    padding-right: 32rpx;
    flex: 1;
}

.t_right_item:last-child {
    margin-bottom: 40rpx;
}

.t_right_item_bottom {
    margin: 20rpx 0;
}

.t_right_item_bottom>image {
    width: 24rpx;
    height: 24rpx;
    margin-left: 5rpx;
}

.t_right_item_bottom>text {
    width: 180rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.plan_btn {
    background: #70b8f7;
    padding: 6rpx 30rpx;
    border-radius: 30rpx;
    align-self: flex-end;
}

.plan_btn_active {
    opacity: 1;
}

.plan_btn_no_active {
    opacity: 0.5;
}

.t_main_dd {
    position: relative;
    left: 24rpx;
    margin-bottom: 24rpx;
}

.t_main_dd::before {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    left: -20rpx;
    width: 8rpx;
    background: #6fb5f4;
}

.next_btn {
    background: #6fb5f4;
    padding: 14rpx 170rpx;
    margin-top: 100rpx;
    position: absolute;
    right: 70rpx;
    border-radius: 30rpx;
    box-shadow: 6rpx 10rpx 26rpx 1rpx rgba(179, 179, 179, 0.3);
}

.black_view {
    background: rgba(0, 0, 0, 0.2);
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
}

.t_dialog {
    z-index: 99;
    position: relative;
}

.t_main_view {
    position: fixed;
    top: 164rpx;
}

.t_dialog_main {
    background: #fff;
    width: 610rpx;
    height: 674rpx;
    position: relative;
    top: 134rpx;
    left: 70rpx;
    border-radius: 25rpx;
}

.t_dialog_img {
    width: 470rpx;
}

.t_eye {
    width: 102rpx;
    height: 102rpx;
    position: absolute;
    top: -44rpx;
    left: 58rpx;
    z-index: 999;
}

.t_close {
    width: 38rpx;
    height: 38rpx;
    right: 25rpx;
    top: 20rpx;
    position: absolute;
}

.t_scroll {
    width: 470rpx;
    height: 574rpx;
    position: relative;
    left: 70rpx;
    top: 70rpx;
}