@import '../../style/base.wxss';
page {
    padding-top: 160rpx;
}

.travel_bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 370rpx;
    width: 750rpx;
}

.t_container {
    padding-top: 160rpx;
    position: relative;
    z-index: 1;
}

.t_logo {
    width: 139rpx;
    height: 44rpx;
    position: absolute;
    top: 46rpx;
    left: 70rpx;
}

.t_main {
    position: relative;
}

.t_left {
    flex-basis: 130rpx;
    background: #d4e9fc;
    position: fixed;
    width: 130rpx;
    bottom: 0;
    top: 320rpx;
    left: 0;
    z-index: 9;
}

.t_select {
    background: #6fb5f4;
    white-space: nowrap;
    margin-bottom: 100rpx;
}

.t_item_height {
    padding: 20rpx;
}

.t_right {
    flex: 1;
    padding: 0rpx 70rpx 56rpx 178rpx;
}

.t_item_active {
    background: #fff;
    color: #6fb5f4;
}

.plan_active {
    border: solid 6rpx #6fb5f4;
}

.plan_no_active {
    border: solid 6rpx #fff;
}

.t_right_item {
    margin-top: 45rpx;
}

.t_right_item:first-child {
    margin-top: 0;
}

.t_right_item>view:first-child {
    position: relative;
    margin-bottom: 16rpx;
    width: 501rpx;
    height: 206rpx;
}

.t_right_item>view:last-child {
    margin-top: 16rpx;
}

.t_right_item_bottom>view:last-child image {
    width: 24rpx;
    height: 24rpx;
    margin-left: 5rpx;
}

.t_right_item>view:first-child>image:first-child {
    width: 501rpx;
    height: 206rpx;
}

.t_right_item>view:first-child>image:last-child {
    position: absolute;
    bottom: 0rpx;
    right: 0;
    width: 73rpx;
    height: 102rpx;
}

.next_btn {
    background: #6fb5f4;
    padding: 14rpx 170rpx;
    margin-top: 140rpx;
    /* position: absolute;
    right: 70rpx; */
    border-radius: 30rpx;
    box-shadow: 6rpx 10rpx 26rpx 1rpx rgba(179, 179, 179, 0.3);
}

.black_view {
    background: rgba(0, 0, 0, 0.2);
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
}

.t_dialog {
    z-index: 99;
    position: relative;
}

.t_main_view {
    position: fixed;
    top: 164rpx;
}

.t_dialog_main {
    background: #fff;
    width: 610rpx;
    height: 1004rpx;
    position: relative;
    top: 134rpx;
    left: 70rpx;
    border-radius: 25rpx;
}

.t_dialog_img {
    width: 470rpx;
}

.t_eye {
    width: 102rpx;
    height: 102rpx;
    position: absolute;
    top: -44rpx;
    left: 58rpx;
    z-index: 999;
}

.t_close {
    width: 38rpx;
    height: 38rpx;
    right: 25rpx;
    top: 20rpx;
    position: absolute;
}

.t_scroll {
    width: 470rpx;
    height: 884rpx;
    position: relative;
    left: 70rpx;
    top: 70rpx;
}